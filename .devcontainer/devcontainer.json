{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": [
    "bundle install",
    "bundle exec rails db:setup",
    "bundle exec rails restart"
  ],
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "rails server"
  },
  "portsAttributes": {
    "3000": {
      "label": "Demo",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    3000
  ]
}
